@model WebApp.Models.ViewModel
<div class="col-lg-12">
    <!-- breadcrumb-->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li aria-current="page" class="breadcrumb-item active">Ladies</li>
        </ol>
    </nav>
</div>
<div class="col-lg-3">
    <!--
    *** MENUS AND FILTERS ***
    _________________________________________________________
    -->
    <div class="card sidebar-menu mb-4">
        <div class="card-header">
            <h3 class="h4 card-title">Categories</h3>
        </div>
        <div class="card-body">
            <ul class="nav nav-pills flex-column category-menu">
                <li>
                    <a href="category.html" class="nav-link">Men<span class="badge badge-secondary">42</span></a>
                    <ul class="list-unstyled">
                        @foreach (Category category in Model.Categories)
                        {
                            <li class="nav-item"><a asp-action="Index" asp-route-id="@category.Id" class="nav-link">@category.Name</a></li>
                        }

                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- *** MENUS AND FILTERS END ***-->
</div>