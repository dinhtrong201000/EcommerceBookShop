@model WebApp.Models.ViewModel
@{
    string[] Items = null;
}
<div id="hot">
    <div class="box py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="mb-0">Hot this week</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="product-slider owl-carousel owl-theme owl-loaded owl-drag">
            <!-- /.product-slider-->
            <div class="owl-stage-outer">
                <div class="owl-stage products" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2480px;">
                    @foreach (var item in Model.Products)
                    {
                        if (item.Img != null)
                        {
                            Items = item.Img.Split(",");
                            <div class="owl-item" style="width: 310px;">
                                <div class="item">
                                    <div class="product">
                                        <div class="flip-container">
                                            <div class="flipper">
                                                <div class="front"><a asp-controller="Product" asp-action="Detail" asp-route-Id="@item.Id"><img src="~/Img/Pro/@Items[0]" alt="" class="img-fluid image"></a></div>
                                                <div class="back"><a asp-controller="Product" asp-action="Detail" asp-route-Id="@item.Id"><img src="~/Img/Pro/@Items[1]" alt="" class="img-fluid image"></a></div>
                                            </div>
                                        </div><a class="invisible"><img src="~/Img/Pro/@Items[0]" alt="" class="img-fluid image"></a>
                                        <div class="text">
                                            <h3><a asp-controller="Product" asp-action="Detail" asp-route-Id="@item.Id">@item.Name</a></h3>
                                            <p class="price">
                                                <del></del>Gia: @item.UnitPrice.ToString("n0") VND
                                            </p>
                                        </div>
                                        @if (item.Level == 1)
                                        {
                                            <div class="ribbon sale">
                                                <div class="theribbon">SALE</div>
                                                <div class="ribbon-background"></div>
                                            </div>
                                            <!-- /.ribbon-->
                                            <div class="ribbon new">
                                                <div class="theribbon">HOT</div>
                                                <div class="ribbon-background"></div>
                                            </div>
                                        }
                                        <!-- /.text-->
                                        <!-- /.ribbon-->
                                        <!-- /.ribbon-->
                                    </div>
                                    <!-- /.product-->
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
            <div class="owl-nav disabled">
                <button type="button" role="presentation" class="owl-prev">
                    <span aria-label="Previous">‹</span>
                </button>
            </div>
            <!-- /.container-->
        </div>
        <!-- /#hot-->
        <!-- *** HOT END ***-->
    </div>
    <style>
        .image {
            height: 250px;
        }
    </style>
</div>