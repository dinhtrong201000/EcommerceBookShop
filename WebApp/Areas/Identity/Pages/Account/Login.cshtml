@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Auth/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Auth/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Auth/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link href="~/Auth/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Auth/vendor/css-hamburgers/hamburgers.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Auth/vendor/select2/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Auth/css/util.css" rel="stylesheet" />

    <link href="~/Auth/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Auth/images/img-01.png" alt="IMG">
                </div>        <section>
                                  <form id="account" method="post">
                                    <h3 style="text-align:center">ADMINISTRATOR</h3>
                                      <div asp-validation-summary="All" class="text-danger"></div>
                                      <div class="form-group">
                                          <label asp-for="Input.Email"></label>
                                          <input asp-for="Input.Email" class="input100"/>
                                          <span class="symbol-input100">
                                              <i class="fa fa-envelope" aria-hidden="true"></i>
                                          </span>
                                          <span asp-validation-for="Input.Email" class="text-danger"></span>
                                      </div>
                                      <div class="wrap-input100">
                                          <label asp-for="Input.Password"></label>
                                          <input asp-for="Input.Password" class="input100" />
                                          <span asp-validation-for="Input.Password" class="text-danger"></span>
                                      </div>
                                      <div class="form-group">
                                          <div class="checkbox">
                                              <label asp-for="Input.RememberMe">
                                                  <input asp-for="Input.RememberMe" />
                                                  @Html.DisplayNameFor(m => m.Input.RememberMe)
                                              </label>
                                          </div>
                                      </div>
                                      <div class="container-login100-form-btn">
                                          <button class="login100-form-btn" type="submit">
                                              Login
                                          </button>
                                      </div>
                                      <div class="form-group">
                                          <p>
                                              <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                          </p>
                                         
                                      </div>
                                  </form>
                </section>
            </div>
        </div>
    </div>
    <!--===============================================================================================-->

    <script src="~/Auth/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/Auth/vendor/bootstrap/js/popper.js"></script>

    <link href="~/Auth/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Auth/vendor/select2/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <script src="~/Auth/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Auth/js/main.js"></script>
</body>
</html>
<partial name="_ValidationScriptsPartial" />
