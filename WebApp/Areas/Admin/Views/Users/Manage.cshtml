@model List<WebApp.Models.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Manage User Roles</h2>
                Add/Remove Roles for User / @ViewBag.UserName.
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].Selected"/> @Model[i].RoleName
                </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
                <a asp-action="EditUser" asp-route-id="@ViewBag.userId"
                   class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
</div>
